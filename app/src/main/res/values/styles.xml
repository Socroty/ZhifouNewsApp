<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="SignInTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FDBE1A</item>
        <item name="colorPrimaryDark">#FDBE1A</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SignUpTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FFA1AA</item>
        <item name="colorPrimaryDark">#FFA1AA</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTabLayoutTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
